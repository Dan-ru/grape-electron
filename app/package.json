{
  "name": "grape",
  "productName": "Grape",
  "identifier": "com.ChatGrape",
  "description": "The world’s most advanced team chat meets enterprise search.",
  "version": "2.13.0",
  "build": "21",
  "author": "UberGrape GmbH",
  "copyright": "© 2017, UberGrape GmbH",
  "main": "./lib/app/index.js",
  "dependencies": {
    "electron-about-window": "^1.6.1",
    "electron-context-menu": "^0.2.1",
    "electron-json-storage": "^2.0.0",
    "fs-jetpack": "^0.7.0",
    "grape-theme": "^2.2.1",
    "grape-web": "^0.61.0",
    "intl": "^1.2.5",
    "load-json-file": "^2.0.0",
    "lodash.clone": "^4.5.0",
    "minimatch": "^3.0.0",
    "react": "^15.5.4",
    "react-document-title": "^2.0.2",
    "react-dom": "^15.5.4",
    "react-intl": "^2.1.5",
    "reset.css": "^2.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-react-intl": "^2.2.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "cpy-cli": "^1.0.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-config-ubergrape": "^4.1.0",
    "eslint-plugin-babel": "^2.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "lint-staged": "^3.5.1",
    "rimraf": "^2.5.4"
  },
  "scripts": {
    "build": "npm run clear:lib && npm run build:lib && npm run build:assets",
    "build:watch": "npm run build:lib -- --watch src",
    "build:lib": "babel src --out-dir lib",
    "build:assets": "cpy **/*.{png,gif,html} ../lib --cwd=./src --parents",
    "clear": "npm run clear:lib && npm run clear:i18n",
    "clear:lib": "rimraf ./lib/**",
    "clear:i18n": "rimraf ./i18n/{src,export}",
    "i18n:export": "npm run build && babel-node i18n/scripts/export.js",
    "i18n:import": "npm run build && babel-node i18n/scripts/import.js",
    "postinstall": "npm run build",
    "lint": "eslint ./src",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "**/src/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ],
    "gitDir": ".."
  }
}
