{
  "name": "Grape",
  "version": "3.0.0-alpha.12",
  "description": "The world’s most advanced team chat meets enterprise search.",
  "main": "lib/index.js",
  "scripts": {
    "build": "electron-builder",
    "build:lib": "babel src -d lib --copy-files",
    "build:lib:watch": "yarn build:lib --watch",
    "start": "yarn build:lib && NODE_ENV=development electron .",
    "start:watch": "yarn start && yarn build:lib:watch",
    "deploy": "yarn build:lib && electron-builder --publish onTagOrDraft",
    "precommit": "lint-staged"
  },
  "repository": "https://github.com/ubergrape/grape-electron",
  "keywords": [
    "Grape",
    "chat",
    "enterprise chat"
  ],
  "author": "UberGrape GmbH <support@chatgrape.com>",
  "copyright": "© 2019, UberGrape GmbH",
  "build": {
    "appId": "com.ChatGrape",
    "buildVersion": "60",
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "mas",
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "tar.gz",
        "deb"
      ],
      "executableName": "Grape",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Office"
    },
    "win": {
      "certificateSubjectName": "UberGrape GmbH",
      "rfc3161TimeStampServer": "http://timestamp.sectigo.com?td=sha256"
    },
    "directories": {
      "output": "build",
      "buildResources": "assets"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint-config-ubergrape",
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.3",
    "electron": "^6.0.7",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.5.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.2.0",
    "eslint-config-ubergrape": "^5.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "@babel/preset-react": "^7.0.0",
    "electron-log": "^3.0.7",
    "electron-updater": "^4.1.2",
    "minimatch": "^3.0.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-jss": "^10.0.0-alpha.24"
  }
}
