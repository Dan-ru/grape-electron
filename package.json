{
  "name": "Grape",
  "version": "3.0.0",
  "description": "The world’s most advanced team chat meets enterprise search.",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "repository": "https://github.com/ubergrape/grape-electron",
  "keywords": [
    "Grape",
    "chat",
    "enterprise chat"
  ],
  "author": "UberGrape GmbH",
  "copyright": "© 2019, UberGrape GmbH",
  "build": {
    "appId": "com.ChatGrape",
    "buildVersion": "47",
    "mac": {
      "category": "public.app-category.business",
      "target": ["mas", "dmg", "zip"],
      "entitlementsInherit": "./assets/child.plist",
      "entitlements": "./assets/Info.plist",
      "provisioningProfile": "./assets/AppStore_Distribution.provisionprofile"
    },
    "linux": {
      "target": ["tar.gz", "deb"],
      "executableName": "Grape",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Office"
    },
    "win": {
      "certificateSubjectName": "UberGrape GmbH",
      "rfc3161TimeStampServer": "http://timestamp.sectigo.com?td=sha256"
    },
    "directories": {
      "output": "build",
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "electron": "^6.0.2",
    "electron-builder": "^21.2.0"
  }
}
