{
  "name": "grape-electron",
  "appId": "com.ChatGrape",
  "copyright": "© 2020, UberGrape GmbH",
  "author": "UberGrape GmbH <support@chatgrape.com>",
  "buildVersion": "70",
  "version": "3.0.0-beta.8",
  "description": "The world’s most advanced team chat meets enterprise search.",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib/ build/ && yarn build:lib && electron-builder --publish never",
    "build:lib": "babel src -d lib --copy-files",
    "build:lib:watch": "yarn build:lib --copy-files --watch",
    "start": "yarn build:lib && cross-env NODE_ENV=development electron .",
    "start:proxy": "yarn build:lib && cross-env NODE_ENV=development electron --disable-http-cache --proxy-server=0.0.0.0:3128 .",
    "start:watch": "concurrently \"yarn build:lib:watch\"  \"yarn build:lib && cross-env NODE_ENV=development electron .\"",
    "start:watch:proxy": "concurrently \"yarn build:lib:watch\" \"yarn build:lib && cross-env NODE_ENV=development electron --disable-http-cache --proxy-server=0.0.0.0:3128 .\"",
    "release": "rm -rf lib/ build/ && yarn build:lib && cross-env GH_TOKEN=\"$(more .token)\" electron-builder --publish onTagOrDraft",
    "release:ci": "rm -rf lib/ build/ && yarn build:lib && cross-env GH_TOKEN=\"${GITHUB_PUBLISH_TOKEN}\" electron-builder --publish onTagOrDraft",
    "i18n:import": "yarn build:lib && babel-node i18n/scripts/import.js",
    "i18n:export": "yarn build:lib && babel-node i18n/scripts/export.js",
    "precommit": "lint-staged"
  },
  "repository": "https://github.com/ubergrape/grape-electron",
  "keywords": [
    "Grape",
    "chat",
    "enterprise chat"
  ],
  "productName": "Grape",
  "build": {
    "appId": "com.ChatGrape",
    "productName": "Grape",
    "copyright": "© 2020, UberGrape GmbH",
    "buildVersion": "70",
    "files": [
      "lib/**/*",
      "assets/tray-icons/*",
      "assets/icon.png",
      "assets/logo.png",
      "assets/overlay.png",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "mas",
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "tar.gz",
        "deb",
        "rpm",
        "AppImage"
      ],
      "executableName": "Grape",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Office",
      "icon": "assets/icons/",
      "description": "Grape Business Messenger",
      "desktop": {
        "Terminal": "false"
      }
    },
    "win": {
      "certificateSubjectName": "UberGrape GmbH",
      "rfc3161TimeStampServer": "http://timestamp.sectigo.com?td=sha256"
    },
    "directories": {
      "output": "build",
      "buildResources": "assets"
    }
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-export-default-from",
      [
        "react-intl",
        {
          "messagesDir": "./i18n"
        }
      ]
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint-config-ubergrape",
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-react-intl": "^4.1.20",
    "concurrently": "^4.1.2",
    "cross-env": "^6.0.0",
    "electron": "^6.0.9",
    "electron-builder": "^22.2.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.2.0",
    "eslint-config-ubergrape": "^5.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "electron-context-menu": "^0.15.2",
    "electron-log": "^3.0.7",
    "electron-reload": "^1.5.0",
    "electron-store": "^5.0.0",
    "electron-updater": "^4.1.2",
    "grape-theme": "^3.4.1",
    "jss": "^10.0.0",
    "jss-plugin-camel-case": "^10.0.0",
    "jss-plugin-default-unit": "^10.0.0",
    "jss-plugin-expand": "^10.0.0",
    "jss-plugin-extend": "^10.0.0",
    "jss-plugin-global": "^10.0.0",
    "jss-plugin-isolate": "^10.0.0",
    "jss-plugin-nested": "^10.0.0",
    "jss-plugin-rule-value-function": "^10.0.0",
    "minimatch": "^3.0.4",
    "querystring": "^0.2.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-intl": "^3.3.2",
    "react-jss": "^10.0.0"
  }
}
